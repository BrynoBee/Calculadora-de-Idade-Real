using System;

class Program {
  public static void Main (string[] args) {

    int DN, MN, AN, DH, MH, AH, IDADEDIA, IDADEMES, IDADEANO;

    Console.WriteLine ("Exercício 19 - Cálculo da Idade II");
    Console.WriteLine ("");

    //Data de nascimento
      Console.Write ("Digite o dia de nascimento: ");
      DN = int.Parse (Console.ReadLine());
      Console.Write ("Digite o mês de nascimento: ");
      MN = int.Parse (Console.ReadLine());
      Console.Write ("Digite o ano de nascimento: ");
      AN = int.Parse (Console.ReadLine());
      Console.WriteLine (" ");

    //Data de hoje
      Console.Write ("Digite o dia de hoje: ");
      DH = int.Parse (Console.ReadLine());
      Console.Write ("Digite o mês de hoje: ");
      MH = int.Parse (Console.ReadLine());
      Console.Write ("Digite o ano de hoje: ");
      AH = int.Parse (Console.ReadLine());

    //Se datas atuais forem menores que as de nascimento
      //Dia
        if (DH < DN)
        {
          MH = MH - 1;
          DH = DH + 30;
        }

      //Mês
        if (MH < MN)
        {
          AH = AH - 1;
          MH = MH + 12;
        }

    //Cálculo dos valores da idade
    IDADEDIA = DH - DN;
    IDADEMES = MH - MN;
    IDADEANO = AH - AN;

    //Apresentar idade
      Console.WriteLine ("");
      Console.WriteLine ("Sua idade é: {0} anos, {1} meses e {2} dias", IDADEANO, IDADEMES, IDADEDIA);
  }
}
